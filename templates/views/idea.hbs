<form method="post" enctype="multipart/form-data">
	<input type="hidden" name="action" value="idea.generate">
	<div class="form-group row">
		<label for="ideaTitle" class="col-md-2 col-form-label">Title of Your Idea:</label>
		<div class="col-sm-10">
			<input type="text" name="title" class="form-control" value="{{ data.idea.title }}" placeholder="Give a Title for your idea.....">
		</div>
	</div>
	<div class="form-group row">
		<label for="ideaDescription" class="col-md-2">Description:</label>
		<div class="col-sm-10">
		<textarea name="description" class="form-control" id="ideaGen" rows="3" placeholder="Give details of your idea.....">{{ data.idea.description }}</textarea>
		</div>
	</div>
	<div class="form-group">
		<label for="file_upload" class="col-md-12"><h5 style="text-align: center">Add Rich Contents(Image, Video, Tweet, List):</h5></label>
		<div class="col-sm-10">
		<textarea name="file_upload" class="form-control sir-trevor" id="file_upload">{{ data.idea.file_upload }}</textarea>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			{{#if data.idea}}
				<a href="#"class="btn btn-primary form-control col-sm-5">Edit Idea</a>
				<a href="#"class="btn btn-secondary form-control col-sm-5">Create Project</a>
			{{else}}
				<button type="submit" class="btn btn-primary">Idea Generate</button>
			{{/if}}
		</div>
	</div>
</form>

