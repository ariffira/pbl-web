<h5 style="text-align: center"><i class="fa fa-fw fa-area-chart"></i> Project Artefact Presentation</h5>
<hr>
<div class="container">
	<h6><i class="fa fa-fw fa-pencil"></i>Project Basic Data: Driving Question:</h6>
	<hr>
	<div class="form-group row">
		<label for="projecTitle" class="col-sm-2 col-form-label">Project Title: </label>
		<div class="col-sm-10">
			<input class="form-control" type="text" placeholder="{{ data.project.title }}" readonly>
		</div>
	</div>
	<div class="form-group row">
		<label for="ideaDescription" class="col-sm-2 col-form-label">Description:</label>
		<div class="col-sm-10">
			<p class="form-control-static">{{ data.project.description }}</p>
		</div>
	</div>
	<div class="form-group row">
		<label for="learningGoals" class="col-sm-2 col-form-label">Learning Goals:</label>
		<div class="col-sm-10">
			<ul>
				{{#if data.allLearningGoals}}
					{{#each data.allLearningGoals}}
						<li>{{goal}}</li>
					{{/each}}
				{{/if}}
			</ul>
		</div>
	</div>
	<div class="form-group row">
		<label for="participants" class="col-sm-2 col-form-label">Participants:</label>
		<ol>
			{{#each data.participants}}
				<li>{{email}}</li>
			{{/each}}
		</ol>
	</div>
	<div class="form-group row">
		<label for="deadline" class="col-sm-2 col-form-label">Deadline:</label>
	</div>
</div>
<hr>
<div class="container">
	<h6><i class="fa fa-fw fa-tasks"></i>Project Tasks:</h6>
	<hr>
    {{#each data.tasks}}
		Task number: {{title}}
	{{/each}}
</div> 
<hr>
<div class="container">
	<h6><i class="fa fa-fw fa-gift"></i>Project Outcome/Artefact:</h6>
	<hr>
	<form method="post" enctype="multipart/form-data">
		<input type="hidden" name="action" value="add.presentation">
		<div class="form-group row">
			{{#if data.project.uploaded_file_path}}
			 <label for="pblImage" class="col-sm-2 col-form-label">Uploaded files (click to download):</label>
			 <div class="col-sm-10">
				 <ul>
					 <li><a href="{{data.project.uploaded_file_path}}">{{data.project.file_name}}</a></li>
				 </ul>
			 </div>
		 {{else}}
			 <label for="pblImage" class="col-sm-2 col-form-label">Upload Files (ppt,pdf,doc etc.):</label>
			 <div class="col-sm-8">
				 <input type="file" name="file_upload" id="file_upload">
				 <label for="file_name">File Name:<input type="text" name="file_name" id="file_name" /></label>
				 <input type="button" value="Upload" class="btn btn-primary" onclick="uploadMyFile()">
				 <div id="new_path"></div>
				 <br>
			 </div>
			 <div class="col-sm-2">
				 <ul id="file_list">
				 </ul>
			 </div>
		 {{/if}}
		</div>
		<div class="form-group">
			<label for="resources_upload" class="col-md-12"><h6 style="text-align: center"> Add Artefacts (Image, Video, Outcome List)</h6></label>
			<div class="col-sm-10">
				<textarea name="resources_upload" class="form-control sir-trevor" id="file_upload">{{ data.presentation.resources_upload }}</textarea>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-10">
				<button type="submit" class="btn btn-primary">Save All</button>
			</div>
		</div>
    </form>
</div>
